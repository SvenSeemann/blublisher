<div class="jumbotron">
  <%= form_for @article do |a| %>
   <div class="form-group">
    <label for="title-input">Titel</label>
    <%= a.text_field :title, class: 'form-control', id: 'title-input' %>
  </div>
  <div class="form-group">
    <label for="body-input">Inhalt</label>
    <%= a.cktext_area :body, class: 'form-control', id: 'body-input' %>
  </div>
  <div class="form-group">
    <label for="category-input">Kategorie</label>
    <%= a.collection_select(
      :category_id,
      Category.all,
      :id, :name,
      {},
      { class: 'form-control', id: 'category-input'}
    ) %>
  </div>
  <div class="form-group">
    <%= a.submit class: 'btn btn-large' %>
  </div>
<% end %>
</div>