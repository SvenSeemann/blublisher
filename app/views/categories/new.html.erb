<h1>Kategorie anlegen</h1>
<%= form_for @category do |c| %>
  <div class="form-group">
    <%= c.label :name, "Kategoriename" %>
    <%= c.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= c.label :color, "Hintergrundfarbe" %>
    <%= c.text_field :color, class: 'form-control', id: "category-color-picker" %>
  </div>
  <div class="form-actions">
    <%= c.submit class: 'btn btn-large' %>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8" async defer>
  $('#category-color-picker').minicolors({theme: 'bootstrap'})
</script>

